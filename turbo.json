{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": [".next/**", "dist/**"]
        },
        "build:pkg": {
            "cache": false,
            "dependsOn": ["^build:pkg"],
            "outputs": [".next/**", "dist/**"]
        }
    }

}
